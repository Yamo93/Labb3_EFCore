@model CompactDiscProject.Models.CompactDiscArtistViewModel

@{
    ViewData["Title"] = "CD Records";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Add New Record</a>
</p>

<form asp-controller="CompactDiscs" asp-action="Index" method="get">
    <p>
        Artist: <select asp-for="ArtistName" asp-items="Model.Artists">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompactDiscs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompactDiscs[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompactDiscs[0].Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CompactDiscs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
